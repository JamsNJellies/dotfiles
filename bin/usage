#!/bin/bash
DIRECTORY="$HOME/usage"
if [ ! -d "$DIRECTORY" ]; then
  mkdir $DIRECTORY
fi

case $1 in
	track)
		cd $DIRECTORY
		while true; do thyme track -o thyme.json; sleep 30s; done;
		;;
	show)
		cd $DIRECTORY
		thyme show -i thyme.json -w stats > thyme.html
		chromium thyme.html
		;;
	clear)
		cd $DIRECTORY
		rm thyme.json
		rm thyme.html
		;;
	?)
		echo "Invalid Option"
		;;
esac
