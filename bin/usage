#!/bin/zsh
DIRECTORY="$HOME/usage"
if [ ! -d "$DIRECTORY" ]; then
  mkdir $DIRECTORY
fi

EMAIL="jez_palmer@yahoo.com"

case $1 in
	track)
		cd $DIRECTORY
		while true; do thyme track -o thyme.json; sleep 30s; done;
		;;
	show)
		cd $DIRECTORY
		thyme show -i thyme.json -w stats > thyme.html
		chromium thyme.html
		;;
	clear)
		cd $DIRECTORY
		rm thyme.json
		rm thyme.html
		;;
	send)
		cd $DIRECTORY
		thyme show -i thyme.json -w stats > thyme.html
		zip -r usage.zip thyme.*
		neomutt -s "USAGE - Computer usage summary for james." -a usage.zip -- $EMAIL < /dev/null
		;;
		
	*)
		echo "Invalid Option"
		;;
esac
