# CWM Configuration file

# Set font
fontname		"scientifica:pixelsize=10"

# Gap
gap			0 45 0 0

# Snap distance
snapdist		10

# Window borders
borderwidth		5

# Ignore these windows
ignore			polybar
ignore			rofi
ignore			lemonbar

# Commands
command term		urxvt
command launcher	"rofi -show drun"

# Border colors
color activeborder	'#ebdbb2'
color inactiveborder	'#32302f'
color urgencyborder	'#fb4934'
color groupborder	'#b8bb26'
color ungroupborder	'#8ec07c'

# Keybinds
bind-key 4-p 		"/home/james/bin/shot"
bind-key 4-Return	"urxvt"
bind-key 4-q		window-delete
bind-key 4-f		window-maximize
bind-key 4S-f 		window-fullscreen
bind-key 4-d		"rofi -show drun"
bind-key 4S-Tab 	"rofi -show window"
bind-key 4-Tab		window-cycle
bind-key 4S-r 		restart
bind-key 4-x 		"/home/james/bin/menu -l"
bind-key 4S-E		"/home/james/bin/drawterm"

# Audio controls
bind-key 4-v 		"/home/james/bin/volctrl up"
bind-key 4-c		"/home/james/bin/volctrl down"

# mouse controls 
bind-mouse  4-1         window-move
bind-mouse  4-2 	window-maximize
bind-mouse  4S-2 	window-fullscreen
bind-mouse  4-3		window-resize

# groups
sticky yes

bind-key        4-1     group-only-1
bind-key        4-2     group-only-2
bind-key        4-3     group-only-3
bind-key        4-4     group-only-4
bind-key        4-5     group-only-5
bind-key        4-6     group-only-6
bind-key        4S-1    window-movetogroup-1
bind-key        4S-2    window-movetogroup-2
bind-key        4S-3    window-movetogroup-3
bind-key        4S-4    window-movetogroup-4
bind-key        4S-5    window-movetogroup-5
bind-key        4S-6    window-movetogroup-6
